---
---
{% for dataset in site.datasets %}
  {  
    "@context": "https://data.slovensko.sk/dcat3.jsonld",
    "iri": "https://katalog.reframe.sk/{{ dataset.url | slice: 10, dataset.url.size }}",
    "názov": { "sk": {{ dataset.title | jsonify }} },
    "poskytovateľ": "https://data.gov.sk/id/legal-subject/30416094"{% if dataset.notes != "" %},
    "popis": { "sk": {{ dataset.notes | jsonify }}{% endif %}{% if dataset.category != "" %} },
    "téma": {{ dataset.category_dcat | jsonify }}{% endif %}, 
    "periodicita_aktualizácie": {{ dataset.periodicity | jsonify }}, 
    "prvok_registra_adries": [ "https://data.gov.sk/id/lau2/SK0222513156" ],
    "kľúčové_slovo": {
    "sk": {{ dataset.keyword | jsonify }}
      }, 
    {% if dataset.maintainer != null and dataset.maintainer != "" %}"kontaktný_bod": {
    "typ": "Organizácia",
    "meno": { 
      "sk": {{ dataset.maintainer | jsonify }} },
    "e-mail": "mailto:{{ dataset.maintainer_email }}"
      },{% endif %}
    "distribúcia": [
    {% for resource in dataset.resources %}{
    "iri": "https://katalog.reframe.sk/{{ dataset.url }}set/{{ forloop.index }}",
    "typ": "Distribúcia",
    "súbor_na_stiahnutie": {{ resource.url | jsonify }},
    {% if resource.name != null and resource.name != "" %}"názov": { "sk": {{ resource.name | jsonify }} }, {% endif %}    
    "formát": {{ resource.format | jsonify }},
    "typ_média": {{ resource.mediatype | jsonify }},
    "podmienky_použitia": {
      "typ": "Špecifikácia podmienok použitia",
      "autorské_dielo": {{ resource.license_AWT | jsonify }},
      "databáza_chránená_zvláštnými_právami": {{ resource.license_DPBSRT | jsonify }},
      "databáza_ako_autorské_dielo": {{ resource.license_ODT | jsonify }},
      "osobné_údaje": "https://data.gov.sk/def/personal-data-occurence-type/2"
      }
    }{% unless forloop.last %},{% endunless %} 
    {% endfor %}]
  }{% unless forloop.last %},{% endunless %}{% endfor %}
