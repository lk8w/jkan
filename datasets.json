---
---
[{% for dataset in site.datasets %}
  {
    "counter": {{ forloop.index }},
    "názov": { "sk": {{ dataset.title | jsonify }} },
    "poskytovateľ": "https://data.gov.sk/id/legal-subject/30416094"{% if dataset.notes != "" %},
    "popis": { "sk": {{ dataset.notes | jsonify }}{% endif %}{% if dataset.category != "" %} },
    "téma": {{ dataset.category_dcat | jsonify }}{% endif %}, 
    "periodicita_aktualizácie": {{ dataset.periodicity | jsonify }}, 
    "prvok_registra_adries": [ "https://data.gov.sk/id/lau2/SK0222513156" ],
    "kľúčové_slovo": {
    "sk": {{ dataset.keyword | jsonify }}
    }, 
    "contact": {{ dataset.maintainer | jsonify }},
    "contact_email": {{ dataset.maintainer_email | jsonify }},
    "distribúcia": {
    {% for resource in dataset.resources %}[
    "typ": "Distribúcia",
    "súbor_na_stiahnutie": {{ resource.url  | jsonify }},
    "názov": { "sk": {{ resource.name  | jsonify }} },
    "formát": "{{ resource.format }}",
    "typ_média": "{{ resource.mediatype }}",
    "podmienky_použitia" {
      "typ": "Špecifikácia podmienok použitia",
      "autorské_dielo":

      }
    ]{% unless forloop.last %},{% endunless %}
    {% endfor %}}
  }{% unless forloop.last %},{% endunless %}{% endfor %}
]
